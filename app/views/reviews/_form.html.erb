<button class="btn btn-secondary mt-2" style="width:100%" type="button" data-toggle="collapse" data-target="#collapseExample" aria-expanded="false" aria-controls="collapseExample">
    Post Review
</button>

<div class="collapse" id="collapseExample">
  <div class="card card-body">
    <div class="form">
      <%= form_for( [@product, @product.reviews.build], as: :product, url: product_reviews_path(@product)) do |f| %>
          <div class="form-group">
            <%= f.text_area :body, class: "form-control", placeholder: "Give feedback here!"%>
          </div>
          <div class="form-group">
            <%= f.submit class: 'btn btn-secondary'%>
          </div>
      <% end %>
    </div>
  </div>
<div>

</div>
</div>
